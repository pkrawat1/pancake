
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html:{class: "span4 well"}) do |f| %>
  <legend>Sign in</legend>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: "Email" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, placeholder: "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "small button" %></div>
  <%= render "devise/shared/links" %>
<% end %>

