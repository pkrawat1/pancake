%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : "Untitled"
    = stylesheet_link_tag "application", media: :all
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1
            = link_to 'Awesumn Store', @pancake
      %section.top-bar-section
        %ul.right
          %li.divider
            = link_to 'Browse', @pancake
          %li.divider
            = link_to 'Contact Us', @pancake
    %div.row
      %div.small-8.columns
        = yield
      %div.small-4.columns
        %h2 About Us
        This is Pancake project
    = javascript_include_tag "application"
