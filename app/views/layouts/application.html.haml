%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : "Untitled"
    = stylesheet_link_tag "application", media: :all
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1= link_to 'RideClubs', root_path
      %section.top-bar-section
        %ul.right
          - if model_signed_in?
            %li.active
              = link_to 'Logout', destroy_model_session_path
            %li.active
              = link_to 'Edit', edit_model_registration_path
          - else
            %li.active
              = link_to 'Login / SignUp', new_model_session_path
    %div.row.center
      %div.small-5.columns
        = yield
    = javascript_include_tag "application"
